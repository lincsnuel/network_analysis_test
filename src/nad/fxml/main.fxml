            <top>
                <Separator opacity="0.7" prefHeight="0.0" prefWidth="1000.0" styleClass="left_pane_top" BorderPane.alignment="CENTER" />
            </top>
            <center>
                <HBox prefHeight="100.0" prefWidth="200.0" styleClass="left_pane" stylesheets="@../style/style.css" BorderPane.alignment="CENTER">
                    <children>
                        <Pane prefHeight="23.0" prefWidth="120.0" styleClass="left_pane_top" />
