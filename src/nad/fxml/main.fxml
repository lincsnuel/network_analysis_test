<BorderPane prefHeight="600.0" prefWidth="1000.0" styleClass="parent" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nad.controllers.MainController">
