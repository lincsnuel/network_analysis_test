                <Button fx:id="activitiesButton" contentDisplay="TOP" layoutX="10.0" layoutY="82.0" mnemonicParsing="false" opacity="0.9" prefHeight="100.0" prefWidth="120.0" styleClass="main_buttons" stylesheets="@../style/style.css" text="Activities" textFill="#a7adb5">
